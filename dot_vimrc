" tab to space
set expandtab
set tabstop=4
set shiftwidth=4

" syntax highlighting
syntax on

" syntax highlight BRS as if VB
autocmd BufNewFile,BufRead *.brs set syntax=vb

" show line numbers
set number

" encoding
set encoding=utf-8

" always show mode
set showmode

autocmd BufNewFile,BufRead /tmp/tmp.* setlocal noexpandtab

set mouse=
set ttymouse=
